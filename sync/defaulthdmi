#Setting to autodetect screen resolution

display_rotate=0

hdmi_force_hotplug=1
disable_splash=1
disable_overscan=1

#this setting should force audio to work under hdmi
hdmi_drive=2

# uncomment to increase signal to HDMI
#config_hdmi_boost=5

gpu_mem=512

dtoverlay=i2c-rtc,mcp7940x
dtparam=i2c_arm=on
dtparam=audio=on
start_x=0

#enable IR sender on
#dtoverlay=gpio-ir,gpio_pin=18
#dtoverlay=gpio-ir-tx,gpio_pin=4


#disable green onboard led
dtparam=act_led_trigger=none
dtparam=act_led_activelow=off

#disable red onboard led
dtparam=pwr_led_trigger=none
