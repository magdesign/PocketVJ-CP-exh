#!/bin/bash

#kill dmx loop file
sudo rm -rf /tmp/dmxloop &

#kill omxplayer less loop file, player will be killed later on
sudo kill $(pgrep 'startlesshelper')  > /dev/null &

#kill xserver
sudo killall -9 /usr/bin/lxsession > /dev/null &

#kill Xvfb virtual framebuffer for qlc plus
sudo pkill Xvfb

#kill videoplayer
sudo /var/www/sync/omxkill > /dev/null &

#kill mapper
sudo killall -9 /home/pvj/openFrameworks/addons/ofxPiMapper/example_basic/./bin/example_basic > /dev/null &
sudo killall -9 /home/pvj/openFrameworks/addons/ofxPiMapper/example_camera/./bin/example_camera > /dev/null &
sudo killall -9 /home/pvj/openFrameworks/addons/ofxPiMapper/example_fbo-sources/./bin/example_fbo-sources > /dev/null &
sudo killall -9 /home/pvj/openFrameworks/addons/ofxPiMapper/example_remote-server/./bin/example_remote-server > /dev/null &

#kill Syphon
sudo killall -9 /usr/bin/TCPSClient.bin > /dev/null &

#kill clock, audioplayer and imageplayer
sudo killall -9 tty-clock > /dev/null &
sudo killall -9 mpg321 > /dev/null &
sudo killall -9 feh > /dev/null &
sudo /var/www/sync/testscreenoff > /dev/null &

#kill kenburns imageplayer
#sudo pkill -9 -f Slideshow_3d.py > /dev/null 2>&1
sudo pkill -9 -f PictureFrame.py > /dev/null &



#kill overlay and softedge
sudo killall -9 /home/pvj/raspidmx/pngview/./pngview /media/internal/images/overlay.png > /dev/null &
sudo killall -9 /home/pvj/raspidmx/pngview/./pngview /media/internal/images/softedge* > /dev/null &

#kill fake keyboard:
sudo killall -9 fsaysuinput > /dev/null &

#Kill dmx player/recorder
sudo killall -9 ola_recorder > /dev/null &

#set all dmx to 0 = blackout
sudo /var/www/sync/setdmxblackout > /dev/null &

#kill camerafeed
sudo killall -9  /usr/bin/raspivid > /dev/null &

#kill puredata
sudo killall -9 /usr/bin/pd-extended > /dev/null &

#kill python pir only
sudo kill $(pgrep -f 'python /var/www/sync/startpir1.py') > /dev/null &

#kill python buttons only, this would kill it everytime, default is commented out!
#sudo kill $(pgrep -f 'python3 /var/www/sync/startbuttons.py') > /dev/null &

#kill python random_video_trigger only
sudo kill $(pgrep -f 'python /var/www/sync/random_video_trigger.py') > /dev/null &

#kill midi recorder
sudo kill $(pgrep 'arecordmidi') > /dev/null &

#kill midi player
sudo kill $(pgrep 'aplaymidi') > /dev/null &

#kill all python scripts
# this destroyes also usefull things like midi2command
#sudo killall python > /dev/null 2>&1

#kill top command
#sudo killall -9 top

#overwrite screen with all black, tri to avoid in future
#sudo /var/www/sync/clearscreen.sh > /dev/null &

#overwrite tty with black to get rid of the clock
sudo printf "\033c" > /dev/tty1 &

#make dmx show files writeable
sudo chmod 777 -R /media/internal/dmx > /dev/null &

#clear log
sudo rm /var/www/*.log > /dev/null &

#without sleep things would kill themself
sleep 0.5